<header class="header">
    <h1>{{shop.name}}</h1>
    <ul>
        {% for link in linklists.main-menu.links -%}
            <li> {{ link.title | link_to: link.url }}</li>
        {%- endfor %}
    </ul>
</header>
{%stylesheet%}
.header{
    padding: 0px;
    display: flex;
}
.header ul{
    display:flex;
   just-content: space-between;
   align-items: center;
   list-style-type: none;
}
.header li{
  color: #656874;
   list-style-type: none;
}
.header  a{
    color: #656874;
    text-decoration:none;
    padding:0px 5px;
    font-size: 22px;
}

{%endstylesheet%}
{%javascript%}
{%endjavascript%}
{%schema%}
{
    "name":"Header",
    "settings": [
       {
        "type": "color",
        "id": "bg",
        "label": "Background color"
      }
    ]
}
{%endschema%}